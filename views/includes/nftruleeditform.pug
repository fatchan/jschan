input(type='hidden' name='_csrf' value=csrf)
input(type='hidden' name='nftrule_id' value=nftRule._id)
.table-container.flex-center.mv-5.horscroll
	table
		tr
			th #{__('Name')}
			th #{__('Network')}
			th #{__('Contract Address')}
			th #{__('Contract ABI')}
			th #{__('Token ID')}
			th #{__('Permissions')}
		tr
			td
				input(required type='text' name='name' value=nftRule.name)
			td
				select(name='network')
					option(value='ethereum', selected=nftRule.network === 'ethereum') #{__('Ethereum')}
					option(value='base', selected=nftRule.network === 'base') #{__('Base')}
					option(value='arbitrum', selected=nftRule.network === 'arbitrum') #{__('Arbitrum')}
			td.text-center
				input(required type='text' name='contract_address' placeholder='0x...' value=nftRule.contractAddress)
			td
				textarea(required name='abi' rows='10' placeholder='[...]') #{nftRule.abi}
			td
				input(type='text' name='token_id' value=nftRule.tokenId)
			td
				div.wm
					input.left.post-check(type='checkbox' name='permission_reply' value='1' checked=nftRule.permissions.reply)
					|  #{__('Post Replies')}
				div.wm
					input.left.post-check(type='checkbox' name='permission_thread' value='1' checked=nftRule.permissions.thread)
					|  #{__('Post Threads')}
				div.wm
					input.left.post-check(type='checkbox' name='permission_link' value='1' checked=nftRule.permissions.link)
					|  #{__('Post Links')}
				div.wm
					input.left.post-check(type='checkbox' name='permission_file' value='1' checked=nftRule.permissions.file)
					|  #{__('Post Files')}
input(type='submit', value=__('Save'))
